<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="登录到食堂管理系统"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/sql_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="第一次使用请输入数据库IP地址"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/sql_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="端口号"
        android:layout_margin="5dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="10001"
        android:hint="手机号"
        android:inputType="phone" />

    <EditText
        android:id="@+id/login_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="密码"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tryLogin"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:paddingEnd="20dp"
            android:paddingBottom="6dp"
            android:text="登录"
            android:textColor="@color/colorBackground"
            app:qmui_backgroundColor="@color/colorPrimary"
            app:qmui_borderColor="#00FFFFFF" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/button_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:onClick="toRegister"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:paddingEnd="20dp"
            android:paddingBottom="6dp"
            android:text="注册"
            android:textColor="@color/colorPrimary"
            app:qmui_borderColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>