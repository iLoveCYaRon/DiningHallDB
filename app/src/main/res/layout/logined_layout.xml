<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginedActivity">

    //line1食堂
    <LinearLayout
        android:id="@+id/lo_l_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/regis_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="选择您所在的食堂" />
    </LinearLayout>
    //line2楼层
    <LinearLayout
        android:id="@+id/lo_l_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lo_l_line1">
        <EditText
            android:id="@+id/regis_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="phone"
            android:hint="选择您的楼层" />
    </LinearLayout>
    //line3窗口号
    <LinearLayout
        android:id="@+id/lo_l_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lo_l_line2">
        <EditText
            android:id="@+id/regis_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="服务窗口" />
    </LinearLayout>
    //line4座位号
    <LinearLayout
        android:id="@+id/lo_l_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lo_l_line3">
        <EditText
            android:id="@+id/regis_pswd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="选择您的用餐座位号" />
    </LinearLayout>
    //line5提交键
    <LinearLayout
        android:id="@+id/lo_l_line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lo_l_line4">

        <Button
            android:id="@+id/regis_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交">
        </Button>
    </LinearLayout>


</RelativeLayout>